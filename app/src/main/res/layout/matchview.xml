<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="60sp"
    android:background="@color/very_light_gray"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/match_hometeam_img"
        android:layout_width="@dimen/match_teams_image_size"
        android:layout_height="@dimen/match_teams_image_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/bneyyehuda"
        android:layout_weight="1"
        android:layout_marginTop="3.5sp"/>

    <TextView
        android:id="@+id/match_hometeam_text"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:layout_marginTop="7sp"
        android:text="בני יהודה תל אביב"
        android:ellipsize="none"
        android:maxLines="2"
        android:textColor="@color/slay_gray"
        android:textSize="15sp"
        android:scrollHorizontally="false"
        android:inputType="textMultiLine"
        android:gravity="center_vertical|center_horizontal"/>

    <RelativeLayout
        android:id="@+id/match_layout_date"
        android:layout_width="0sp"
        android:layout_marginTop="2sp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        >

        <TextView
            android:id="@+id/match_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="א'"
            android:textColor="@color/slay_gray"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:gravity="center"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01"
            android:textColor="@color/slay_gray"
            android:layout_marginRight="3sp"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/match_day"
            />
        <TextView
            android:id="@+id/match_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:text="18:00"
            android:textColor="@color/slay_gray"
            android:textSize="18sp"
            android:layout_below="@+id/match_day"
             />
        <TextView
            android:id="@+id/match_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr"
            android:text="2 - 3"
            android:textSize="18sp"
            android:textColor="@color/slay_gray"
            android:gravity="center"
            android:layout_marginTop="5sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/match_awayteam_text"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:layout_marginTop="7sp"
        android:text="הפועל אשקלון"
        android:textSize="15sp"
        android:textColor="@color/slay_gray"
        android:gravity="center_vertical|center_horizontal"/>
    />
    <ImageView
        android:id="@+id/match_awayteam_img"
        android:src="@drawable/ashkelon"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/match_teams_image_size"
        android:layout_height="@dimen/match_teams_image_size"
        android:layout_weight="1"
        android:layout_marginTop="3.5sp"
        />
 </LinearLayout>
