 <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_header"
            android:background="@color/aqua"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="@dimen/card_margin"
            card_view:cardBackgroundColor="@color/offwhite"
            card_view:cardUseCompatPadding="true"
            android:elevation="2dp"
            card_view:cardCornerRadius="1dp">
                <TextView
                    android:id="@+id/playerheadertext"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:text="שוערים"
                    android:textSize="@dimen/feed_text_size"
                    android:background="@color/light_blue"
                    android:textColor="@color/slay_gray"
                    android:shadowColor="@color/offwhite"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:focusable="false"
                    />
 </android.support.v7.widget.CardView>

